<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/margin_ten"
    android:paddingRight="@dimen/margin_ten">

    <ImageView
        android:id="@+id/premium_item_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:padding="@dimen/default_margin"
        android:layout_marginRight="@dimen/margin_ten"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/premium_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_normal"
            android:textColor="@color/shadow_black"
            android:textStyle="bold"
            app:fontFamily="@font/roboto_regular"/>

        <TextView
            android:id="@+id/premium_item_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:textSize="@dimen/small_text_size"
            android:layout_marginTop="@dimen/margin_xsmall"
            app:fontFamily="@font/roboto_regular"/>

    </LinearLayout>

</LinearLayout>